<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="RegressionSuite">
    <test name="[Smoke Test] Log In">
        <classes>
            <class name="TestNG.TestLoginPage.LoginTest">
                <methods>
                    <include name="loginWithValidCreds"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="[Smoke Test] Sign Up">
        <classes>
            <class name="TestNG.TestLoginPage.LoginTest">
                <methods>
                    <include name="signUpWithValidCreds"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>